		"hono": "^4.7.10",
		"immer": "^10.1.1",
		"lucide-react": "^0.511.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.8",
